<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activitis.MainActivityDescripcion">

    <TextView
        android:id="@+id/txtdetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalle"
        android:textSize="44dp"
        android:textStyle="bold"
       app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/txtalturap2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtdetalle"
        android:text="altura" />

    <TextView
        android:id="@+id/txtpeso2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtalturap2"
        android:paddingTop="@dimen/cardview_default_radius"
        android:text="Etiqueta2" />

    <TextView
        android:id="@+id/txtIMC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtpeso2"
        android:paddingTop="@dimen/cardview_default_radius"
        android:text="IMC" />

    <TextView
        android:id="@+id/txtdescripciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtIMC"
        android:paddingTop="@dimen/cardview_default_radius"
        android:text="....." />


</androidx.constraintlayout.widget.ConstraintLayout>